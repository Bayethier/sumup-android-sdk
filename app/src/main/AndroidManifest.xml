<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.sumup.sdksampleapp">

    <application
      android:allowBackup="true"
      android:icon="@drawable/icon"
      android:label="@string/app_name"
      android:name=".SampleApplication"
      android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

    <activity
      android:name="com.sumup.sdksampleapp.MainActivity"
      android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
          android:name="com.sumup.sdksampleapp.ResponseActivity"
          android:label="Payment Result">
            <intent-filter>
                <action android:name="com.sumup.sdksampleapp.ResponseActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
